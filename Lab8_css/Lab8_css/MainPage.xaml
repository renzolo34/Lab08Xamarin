<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab8_css.MainPage">
    <ContentPage.Resources>
        <StyleSheet Source="../Styles/Styles.css" />
    </ContentPage.Resources>

    <StackLayout >
        <Button Text="Usando CSS en Xamarin" StyleClass="CSSButton" />
        <Label Text="Bienvenido Renzo Lopez" TextColor="Black" StyleClass="lblTitulo" />

        <Image Source="kia.png" />

        <Label x:Name="lbl" TextColor="White" Text="Este es un Kia SportStage" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

        <Button Text="Click Aquí" VerticalOptions="EndAndExpand"/>
        <Button Text="Siguiente" VerticalOptions="EndAndExpand" />
    </StackLayout>

</ContentPage>
